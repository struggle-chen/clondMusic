/* pages/index/index.wxss */
/* 轮播图区域 */
.banner {
  width: 100%;
  height: 300rpx;
}
.banner-swiper image {
  width: 100%;
  height: 100%;
}
/* 导航栏区域 */
.navContainer {
  display: flex;
  padding: 20rpx;
  /* align-content: space-between; */
}
.navContainer .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.iconfont {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
  background: #ec4141;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.item .title {
  font-size: 26rpx;
}
/* 推荐歌曲区域 */
.recommend {
  padding: 20rpx;
}
.scroll {
  display: flex;
  height: 300rpx;
}
.scroll-item {
  width: 200rpx;
  margin-right: 20rpx;

}
.scroll-item image {
  width: 200rpx;
  height: 200rpx;
}
.scroll-item .name {
  /* 多行省略 */
  font-size: 26rpx;
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
/* 排行榜区域 */
.topList {
  padding: 20rpx;
}
.topList-swiper {
  width: 90%;
  height: 450rpx;
  background: #fbfbfb;
  padding: 10rpx 30rpx;
}
.topList-item image {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  /* margin-top: 30rpx; */
  border-radius: 10rpx;
}
.musicItem {
  margin-top: 30rpx;
}
.counter {
  margin: 0 40rpx;
}