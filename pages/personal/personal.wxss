/* pages/personal/personal.wxss */
.user-section {
  position: relative;
  height: 520rpx;
  padding: 30rpx;
}
.user-section .bgImg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.7;
}
/* 登录区域 */
.login {
  position: absolute;
  top: 100rpx;
}
.user-section .portrait {
  width: 140rpx;
  height: 140rpx;
  vertical-align: middle;
  border-radius: 50%
}
.login .username {
  margin-left: 30rpx;
}
.vip-card {
  position: relative;
  top: 250rpx;
  width: 100%;
  height: 300rpx;
  background: rgba(0, 0, 0, .7);
  border-radius: 16rpx 16rpx 0 0;
  color: #f7d680;
}
.vip-card .vip-img {
  width: 380rpx;
  height: 260rpx;
  position: absolute;
  top: 20rpx;
  right: 0;
}
.vip-card .vip-head {
  display: flex;
}
.vip-head .vip {
  margin: 20rpx 0 0 20rpx;
  flex: 1;
}
.vip-head .vip .title {
  margin-left: 20rpx;
  font-size: 24rpx;
}
.vip-head .open {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 5rpx 20rpx;
  font-size: 22rpx;
  background: #f7d680;
  color: #36343c;
  border-radius: 20rpx;
}
.vip-card .dec {
  display: block;
  margin: 30rpx 20rpx;
}
.vip-card .bottom {
  margin-left: 20rpx;
  font-size: 24rpx;
}
/* 覆盖内容区域 */
.cover-container {
  position: relative;
  background:#f5f5f5;
  /* height: 500rpx; */
  margin-top: -120rpx;
}
.cover-container .arc {
  width: 100%;
  height: 36rpx;
  position: absolute;
  top: -30rpx;
}
.nav-section {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 20rpx;
  margin: 30rpx;
}
.nav-section .iconfont {
  font-size: 50rpx;
  color: #d43c33;
}
.nav-section .nav-item {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
}
.nav-item .title {
  font-size: 24rpx;
  margin-top: 10rpx;
}
/* 最近播放的区域 */
.personal-content {
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
}
.recent-player {
  background: #fff;
  padding: 20rpx 0;
  
}
.recent-item {
  font-size: 26rpx;
  margin-left: 20rpx;
}
.recent-player .record {
  margin-top: 20rpx;
}
.card-item {
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  padding: 0 20rpx;
  border-top: 1rpx solid #eee;
}
.card-item .more {
  float: right;
 
}
/* 最近播放记录区域
 */
 .scroll {
  display: flex;
  height: 200rpx;
  margin-top: 20rpx;
}
.scroll-item {
  width: 200rpx;
  margin-right: 20rpx;

}
.scroll-item image {
  width: 200rpx;
  height: 200rpx;
}